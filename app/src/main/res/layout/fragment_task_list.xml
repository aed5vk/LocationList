<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs4720.cs.virginia.edu.locationlist.TaskFragment">

    <TextView
        android:layout_width="149dp"
        android:layout_height="39dp"
        android:text="Your Tasks"
        android:layout_gravity="top"
        android:textSize="25dp"
        android:id="@+id/textView" />


    <EditText
        android:id="@+id/taskInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Enter a new Task"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </EditText>

    <Button android:id="@+id/emptyButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="center"
        android:text="Add"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/taskInput"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView" />

    <ListView android:id="@android:id/list" android:layout_width="wrap_content"
        android:layout_height="477dp"
        android:layout_gravity="left|center_vertical"
        android:layout_below="@+id/taskInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
